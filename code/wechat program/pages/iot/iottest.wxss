.body {
  display: flex;
  justify-content: center;
  align-items: center;
  background: -webkit-linear-gradient(top, #1797eb, lightblue, white);
}

.monitor {
  width: 80%;
  margin-top: 30px;
  margin-bottom: 60px;
  background-color: white;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 3px 5px 1px gainsboro;
  padding: 3px 0px;
}

.flex-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.flex-row > view {
  width: 50%;
  height: 80px;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}


.flex-row > text {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  flex-shrink: 0;
  height: 80px;
}

button {
  font-weight: bold;
  flex-shrink: 0;
  margin: 20px 30px;
  border-radius: 30px;
  background: #673bb7;
  color: white;
  width: 100px;
  border: 0px;
}

.hover {
  background-color: #1797eb;
  color: white;
}

.border-right {
  border-right: 1px dashed #1797eb;
}

.border-bottom {
  border-bottom: 1px dashed #1797eb;
}

.border-right-bottom {
  border-bottom: 1px dashed #1797eb;
  border-right: 1px dashed #1797eb;
}